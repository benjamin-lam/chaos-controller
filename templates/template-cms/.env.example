# üåê Basis-URL deiner CMS-Stage
BASE_URL=https://staging.example-cms.com
NODE_ENV=development

# üë§ Rollen-Credentials (bitte echte Werte in .env.local pflegen)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMeAdmin123!
EDITOR_EMAIL=editor@example.com
EDITOR_PASSWORD=ChangeMeEditor123!

# üóÇÔ∏è Storage-State Pfade (werden beim globalSetup erzeugt)
ADMIN_STORAGE_STATE=playwright/.auth/admin.json
EDITOR_STORAGE_STATE=playwright/.auth/editor.json

# üîÄ Login-Flow Selektoren & Pfade
LOGIN_PATH=/login
EMAIL_SELECTOR=input[type="email"]
PASSWORD_SELECTOR=input[type="password"]
SUBMIT_SELECTOR=button[type="submit"]
DASHBOARD_SELECTOR=.dashboard-container

# üß≠ Timeouts & Feature Flags
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000
ENABLE_SCREENSHOTS=true
ENABLE_TRACES=true
